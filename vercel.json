{
  "rewrites": [
    {
      "source": "/api/order/:path*",
      "destination": "https://www.lg-pay.com/api/order/:path*"
    },
    {
      "source": "/api/deposit/:path*",
      "destination": "https://www.lg-pay.com/api/deposit/:path*"
    },
    {
      "source": "/api/payin",
      "destination": "https://api.bond-pays.com/api/payin"
    },
    {
      "source": "/api/payout",
      "destination": "https://api.bond-pays.com/api/payout"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}